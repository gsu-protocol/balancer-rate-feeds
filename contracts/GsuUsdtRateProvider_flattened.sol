/**
 * @title Balancer rate provider interface.
 */
interface IRateProvider {
    function getRate() external view returns (uint256);
}

/**
 * @title OSM.
 */
interface IOSM {
    /**
     * @notice Get amount of USDT for 1 GSUc with OSM delay
     * @return Amount of USDT for 1 GSUc
     */
    function read() external view returns (uint256);

    /**
     * @notice Get amount of USDT for 1 GSUc without OSM delay
     * @return Amount of USDT for 1 GSUc
     */
    function peep() external view returns (uint256);
}

/**
 * @title GSUc USDT Rate Provider
 * @notice Returns the value of USDT in terms of GSUc
 */
contract GSUcUSDTRateProvider is IRateProvider, Ownable {
    IOSM public immutable osm;
    bool public osm_delay;

    constructor(IOSM _osm) {
        osm = _osm;
        osm_delay = true;
    }

    /**
     * @return the value of USDT in terms of GSUc
     */
    function getRate() external view override returns (uint256) {
        return osm_delay ? osm.read() : osm.peep();
    }

    /**
     * @notice enable/disable osm delay
     */
    function setOSMDelay(bool _choice) external onlyOwner {
        osm_delay = _choice;
    }
}
